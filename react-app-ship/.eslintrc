{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "plugins": [
    "babel",
    "react",
    "promise",
    "jsx-a11y",
    "import"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "__DEV__": false,
    "__PROD__": false,
    "__DEBUG__": false,
    "__COVERAGE__": false,
    "__BASENAME__": false
  },
  "rules": {
    "react/jsx-filename-extension": [
      1, {
        "extensions": [".js", ".jsx"]
      }
    ],
    "babel/generator-star-spacing": 1,
    "generator-star-spacing": 0,
    "jsx-quotes": [
      2,
      "prefer-single"
    ],
    "max-len": [
      2,
      120,
      2
    ],
    "semi": [
      2,
      "always"
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "react/jsx-boolean-value": [
      1,
      "always"
    ],
    "key-spacing": [
      1, {
        "singleLine": {
          "beforeColon": false,
          "afterColon": true
        },
        "multiLine": {
          "beforeColon": false,
          "afterColon": true
        }
      }
    ],
    "react/forbid-prop-types": [0, {}],
    "no-restricted-syntax": 0
  }
}
